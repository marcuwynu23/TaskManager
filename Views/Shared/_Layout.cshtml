<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport"
        content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Task Manager</title>

    <link rel='stylesheet'
        href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css'
        integrity='sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=='
        crossorigin='anonymous' />
    <link rel="stylesheet"
        href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet"
        href="~/lib/md5/css/mdb.min.css" />
    <link rel="stylesheet"
        href="~/lib/md5/css/mdb.rtl.min.css" />
    <link rel="stylesheet"
        href="~/lib/md5/css/mdb.dark.min.css" />
    <link rel="stylesheet"
        href="~/css/site.css"
        asp-append-version="true" />

    <link rel="stylesheet"
        href="~/TaskManager.styles.css"
        asp-append-version="true" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>

<body>
    <header>
        <nav
            class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark card border-none rounded-0 box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold"
                    asp-area=""
                    asp-controller="Task"
                    asp-action="Index">
                    <img src="https://icon-library.com/images/task-management-icon/task-management-icon-25.jpg"
                        alt="Task Manager Icon"
                        width="30"
                        height="30"
                        class="d-inline-block align-top me-2">
                    Task Manager
                </a>
                <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white"
                                asp-area=""
                                asp-controller="Task"
                                asp-action="Index">Tasks</a>
                        </li>
                        <!--about -->
                        <li class="nav-item">
                            <a class="nav-link text-white"
                                asp-area=""
                                asp-controller="Task"
                                asp-action="About">About</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container-fluid">
        <main role="main"
            class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-none rounded-0 footer text-muted card">
        <div class="container text-center">
            &copy; 2024 - Task Manager by @@marcuwynu23
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/md5/js/mdb.umd.min.js"></script>
    <script src="~/lib/md5/js/mdb.es.min.js"></script>
    <script src="~/js/site.js"
        asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>